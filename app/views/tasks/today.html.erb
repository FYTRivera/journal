<%= render "layouts/header"%>
<div class="wrapper">
  <div class="card show">
    <% @tasks.each do |task| %>
        <ul>
            <li>
                <p>Category: <%= task.category.name %></p>
                <p>ID: <%= task.id %></p>
                <p>Body: <%= task.body %></p>
                <p>Due: <%= task.due_date %></p>
            </li>
        </ul>
    <%end%>
  </div>
</div>